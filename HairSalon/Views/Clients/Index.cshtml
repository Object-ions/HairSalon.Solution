@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;
<div class="container">
<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
}
else
{
  <ul>
@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) - with @client.Stylist.Name</li>
}
  </ul>
}


<div class="link-card">
<p>@Html.ActionLink("Add new client", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
</div>

</div>